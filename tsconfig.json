{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "ES2021",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "jsx": "react-jsx"
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
